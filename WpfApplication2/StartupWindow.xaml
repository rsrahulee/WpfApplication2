<Window x:Class="WpfApplication2.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartupWindow"  Height="600" Width="800"
       >

    <DockPanel LastChildFill="True">
        <Menu Width="Auto" Height="21" DockPanel.Dock="Top" VerticalAlignment="Top">
            <!-- Action Menu -->
            <MenuItem Header="File">
                <MenuItem
                  Header="New" 
                  Margin="0"
                  Click="MenuItemNew_Click">
                    <!--<MenuItem.Icon>
                        <Image Source="Icons/activate.ico" />
                    </MenuItem.Icon>-->
                </MenuItem>
                <Separator/>
                <MenuItem
                  Header="Open" 
                  Margin="0"
                  Click="MenuItemOpen_Click">
                    <!--<MenuItem.Icon>
                        <Image Source="Icons/database-refresh.ico" />
                    </MenuItem.Icon>-->
                </MenuItem>
                <MenuItem Header="Exit" 
                  Margin="0"
                  Click="MenuItemExit_Click">
                    <!--<MenuItem.Icon>
                        <Image Source="Icons/Exit.ico" />
                    </MenuItem.Icon>-->
                </MenuItem>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
